<div>
    <div class="container mx-auto p-6">
  <h2 class="text-3xl font-bold text-center text-purple-800 mb-6">Leaderboard</h2>
  
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <table class="min-w-full bg-white">
      <thead>
        <tr>
          <th class="py-3 px-6 bg-purple-800 text-left text-xs font-semibold text-white uppercase tracking-wider">
            User
          </th>
          <th class="py-3 px-6 bg-purple-800 text-left text-xs font-semibold text-white uppercase tracking-wider">
            Score
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each users as |user|}}
        <tr class="border-b border-purple-200 hover:bg-purple-50">
          <td class="py-4 px-6 text-sm text-purple-900">{{user.name}}</td>
          <td class="py-4 px-6 text-sm text-purple-900">{{user.score.score_number}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
</div>