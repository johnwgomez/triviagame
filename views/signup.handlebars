<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0 mb-36">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
                Create an account
            </h1>
            <form class="space-y-4 md:space-y-6" id="signup-form">
                <div>
                    <label for="name" class="block mb-2 text-xl font-medium text-gray-900">Your name</label>
                    <input type="name" id="name-signup" class="bg-gray-50 border border-purple-300 text-gray-900 text-sm rounded-lg focus:ring-purple-600 focus:border-purple-600 block w-full p-2" placeholder="John Doe"/>
                </div>
                <div>
                    <label for="email" class="block mb-2 text-xl font-medium text-gray-900">Your email</label>
                    <input type="email" id="email-signup" class="bg-gray-50 border border-purple-300 text-gray-900 text-sm rounded-lg focus:ring-purple-600 focus:border-purple-600 block w-full p-2" placeholder="name@example.com"/>
                </div>
                <div>
                    <label for="password" class="block mb-2 text-xl font-medium text-gray-900">Create password</label>
                    <input type="password" id="password-signup" class="bg-gray-50 border border-purple-300 text-gray-900 text-sm rounded-lg focus:ring-purple-600 focus:border-purple-600 block w-full p-2" placeholder="Enter Password"/>
                </div>
                <div>
                    <p>Already a user? <a class="underline" href="/login">Log In</a></p>
                </div>
                <div class="flex">
                     <button class="bg-primary text-white py-2 px-6 rounded-lg hover:bg-secondary text-lg hover:border-4 hover:border-purple-300 mx-auto" id="signup-button" type="submit">Sign Up</button>
                </div>

            </form>

        </div>

    </div>
    
</div>
<script src="/js/signup.js"></script>