<div>

    <form class="flex flex-row m-5 border-4 rounded-lg border-primary-400 p-4"
        id="game-form">
        <div class="flex flex-col">
            <label for="text">Category</label>
            <input id="category" type="text"
                class="border-4 border-purple-300 rounded-lg mt-2 px-2"
                placeholder="'Science'" />
        </div>
        <div class="mx-5 flex flex-col">
            <label>Difficulty</label>
            <select id="difficulty"
                class="mt-2 border-4 border-purple-300 rounded-lg px-2">
                <option value disabled selected>Select Difficulty</option>
                <option value="Easy">Easy</option>
                <option value="Medium">Medium</option>
                <option value="Hard">Hard</option>
            </select>
        </div>
        <div class="mt-5 mx-5 flex ">
            <button type="submit"
                class="bg-primary text-white py-2 px-6 rounded-lg hover:bg-secondary text-lg hover:border-4 hover:border-purple-300 ">Start</button>
        </div>
        <div class="mt-7 mx-5">
            <a
                class="bg-primary text-white py-2 px-6 rounded-lg hover:bg-secondary text-lg hover:border-4 hover:border-purple-300 "
                href="/leaderboard">View Leaderboard</a>
        </div>
    </form>
    <div class="border-4 border-purple-400">
        <h1>{{question}}</h1>
        {{#each answers as |answer|}}
        <h2>{{answer.choice.text}}</h2>
        {{/each}}
    </div>
</div>
<script src="./js/openai.js"></script>