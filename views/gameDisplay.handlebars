
<form id="trivia-form" class="max-w-lg mx-auto p-8 bg-purple-700 text-white rounded-lg shadow-lg mt-8">
  <h2 class="text-3xl font-bold text-center mb-8">Trivia Question</h2>

 
  <p class="text-xl font-semibold mb-6" id="{{difficulty}}">{{question}}</p>

 
  <ol class="list-decimal list-inside mb-8 space-y-4">
        {{#each incorrects as |incorrect|}}
    <li class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-600 transition ease-in-out duration-200">
      <label class="flex items-center cursor-pointer w-full">
        <input
          type="radio"
          id="incorrect"
          name="answer"
          value="{{decodeString incorrect}}"
          class="mr-4 h-6 w-6 text-purple-300 focus:ring-purple-300"
          required
        />
        <span class="text-lg font-semibold">{{decodeString incorrect}}</span>
      </label>
    </li>
    {{/each}}
    <li class="flex items-center bg-purple-500 p-4 rounded-lg hover:bg-purple-600 transition ease-in-out duration-200">
      <label class="flex items-center cursor-pointer w-full">
        <input
          type="radio"
          id="correct"
          name="answer"
          value="{{correct}}"
          class="mr-4 h-6 w-6 text-purple-300 focus:ring-purple-300"
          required
        />
        <span class="text-lg font-semibold">{{correct}}</span>
      </label>
    </li>
  </ol>

<div class="border-4 border-purple-400">
        <div>
        <h1>{{question}}</h1>
        </div>
        <form>
        {{#each incorrects as |incorrect|}}
        <input type="radio" id="incorrect" name="{{decodeString incorrect}}" value="{{decodeString incorrect}}"/>
        <label for="incorrect">{{decodeString incorrect}}</label>
        {{/each}}
        <input type="radio" id="correct" name="{{decodeString correct}}" value="{{decodeString correct}}"/>
        <label for="correct">{{decodeString correct}}</label>
        <h2>{{correct}}</h2>
        </form>


  
  <button
    type="submit"
    class="w-full px-6 py-3 bg-purple-800 text-white font-semibold rounded-lg hover:bg-purple-900 focus:outline-none focus:ring-4 focus:ring-purple-400"
  >
    Submit Answer
  </button>
</form>